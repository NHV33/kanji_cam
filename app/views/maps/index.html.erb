<%= render 'partials/title_bar', title: "Maps" %>

<div class="container">
<div class="grid gap-3">
<div class="mt-3 d-md-flex justify-content-between">
<div class="card p-3 custom-card mt-3 col-12 col-md-6">
            <div class="card-body">
              <h5 class="card-title">See where you found your kanjis</h5>
              <p>Display map preview here!</p>
            </div>
          </div>
          <div class="card p-3 custom-card mt-3 col-12 col-md-6">
            <div class="card-body">
              <h5 class="card-title">Check hot locations</h5>
              <p>Display map preview here!</p>
              <!-- map preview -->
            </div>
          </div>
          </div>
</div>
<div class="map mt-3 mx-auto"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<% @cards.each do |card| %>
<div>
<h1><%= card.kanji.character %></h1>
<h2><%= card.latitude %></h2>
<h2><%= card.longitude %></h2>
</div>
<% end %>
</div>
